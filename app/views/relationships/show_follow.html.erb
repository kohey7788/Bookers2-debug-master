<div class = 'container'>
  <div class = 'row'>
    <div class = 'col-md-11 offset-md-1' >
      <% @users.each do |user| %>
      <table class = 'table'>
      <tr>
        <th><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></th>
        <th>  <%= user.name %> </th>
        <th>フォロー数:<%= user.follower.count %></th>
        <th>フォロワー数:<%= user.followed.count %></th>
        <th><%= link_to 'Show', user_path(user) %></th>
      </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>